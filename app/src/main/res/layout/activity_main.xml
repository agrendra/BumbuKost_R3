<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agrendra.bumbukost_r3.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/rempah">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/rempah"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:text="Rempah rempah"
                android:textColor="@android:color/white"
                android:background="#4f0e0d0e"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:id="@+id/minuman">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/minum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:text="Minuman"
                android:textColor="@android:color/white"
                android:background="#4f0e0d0e"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:id="@+id/makanan">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/makanan"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:text="Makanan"
                android:textColor="@android:color/white"
                android:background="#4f0e0d0e"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cemilan">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/cemilan"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:text="Cemilan"
                android:textColor="@android:color/white"
                android:background="#4f0e0d0e"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
